<% include ../partials/header %>


<div class="container">		 
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to Campground</h1>
			<p>View our few captured moments</p>
			<p>
				<a href="campgrounds/new" class="btn btn-primary btn-large">Add new campground</a>
			</p>
		</div>
	</header>
	<div class="row">
		<div class="col-lg-12">
			<h3>Our most Beautiful capture</h3>
		</div>
	</div>
	<div class="row " style="display: flex; flex-wrap: wrap">
			<% campgrounds.forEach(function(campground) { %>
    
				<div class="col-md-3 col-sm-6">
					<div >
						<img  class="img-thumbnail" src="<%= campground.image %>" alt="image">
					</div>
					<div class="caption text-center img-thumbnail">
						<h4><%= campground.name %></h4>
						<p>
							<a href="/campgrounds/<%= campground._id%>" class="btn btn-primary btn-sm">More info</a>
						</p>
					</div>
					
					
				</div>
			
			<% }) %>

	</div>
	
	

</div>


<% include ../partials/footer %>